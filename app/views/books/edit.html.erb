<h1>Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
<p><%= link_to "show", book_path(@book) %>|<%= link_to "back", books_path(@book) %></p>
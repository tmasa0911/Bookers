<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
    <h2>Books</h2>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>

        <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td><%= link_to "show", book_path(book.id) %></td>
              <td><%= link_to "edit", edit_book_path(book.id) %></td>
              <td><%= link_to "delete", book_path(book.id), method: :delete, data: { confirm: "Are you sure?"} %></td>
            </tr>
        <% end %>
      </tbody>
    </table>

    <h2>New Book</h2>
    <!-- flash[:notice]に代入されたメッセージを表示してください -->
    <% if %>
      <div class="flash">
        <%= %>
      </div>
    <% end %>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <div><%= f.submit 'Create Book' %></div>

<% end %>
